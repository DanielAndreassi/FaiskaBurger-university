<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.faiskaburgers.faiskaburger.FormMetodoDePagamentoController">
    <children>
        <Label text="ID" />
        <TextField fx:id="tfId" editable="false" />
        <Label layoutX="10.0" layoutY="10.0" text="Nome">
            <VBox.margin>
                <Insets top="16.0" />
            </VBox.margin>
        </Label>
        <TextField fx:id="tfNome" layoutX="10.0" layoutY="27.0" />
        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="600.0" spacing="36.0">
            <VBox.margin>
                <Insets top="36.0" />
            </VBox.margin>
            <children>
                <Button mnemonicParsing="false" onAction="#onConfirmar" prefHeight="32.0" prefWidth="100.0" style="-fx-background-color: royalblue;" text="Confirmar" textFill="#fcfcfc">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onCancelar" prefHeight="32.0" prefWidth="100.0" style="-fx-background-color: salmon;" text="Cancelar" textFill="#fcfcfc">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <effect>
        <DropShadow height="64.96" radius="27.585" spread="0.17" width="47.38" />
    </effect>
</VBox>
